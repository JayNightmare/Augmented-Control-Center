{
  "name": "ar-glasses-control-center",
  "version": "1.0.0",
  "description": "A modular desktop application for controlling and debugging AR glasses",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "build": "tailwindcss -i ./src/styles/main.css -o ./src/styles/output.css --watch",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./src/styles/output.css",
    "watch": "concurrently \"npm run build\" \"npm run dev\"",
    "package": "electron-builder",
    "dist": "npm run build:css && electron-builder"
  },
  "keywords": [
    "ar",
    "augmented-reality",
    "glasses",
    "control-center",
    "electron",
    "desktop-app"
  ],
  "author": "AR Development Team",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^1.5.0",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.ar.controlcenter",
    "productName": "AR Glasses Control Center",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
