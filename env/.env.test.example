# ========================================
# AR Glasses Control Center - Testing Environment
# ========================================
# Copy this file to .env.test and modify the values as needed
# This configuration is optimized for automated testing

# ========================================
# Application Configuration
# ========================================

# Node Environment
NODE_ENV=test

# Application Port (if using web server)
PORT=3001

# Application Debug Mode
DEBUG=false

# ========================================
# Development Settings (Testing)
# ========================================

# Enable Live Reload (disabled in testing)
LIVE_RELOAD=false

# Enable DevTools (disabled in testing)
OPEN_DEVTOOLS=false

# Enable Hot Reload (disabled in testing)
HOT_RELOAD=false

# Enable Source Maps (disabled in testing)
SOURCE_MAPS=false

# Enable Fast Refresh (disabled in testing)
FAST_REFRESH=false

# ========================================
# Camera Configuration (Testing)
# ========================================

# Camera Device IDs (use test cameras)
CAMERA_DEVICE_IDS=test_camera_1,test_camera_2

# Camera Resolution (low for testing)
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# Camera Frame Rate (low for testing)
CAMERA_FPS=10

# Camera Calibration File Path
CAMERA_CALIBRATION_PATH=./config/camera-calibration-test.json

# Use Mock Camera Data (required for testing)
USE_MOCK_CAMERA=true

# Test Camera Data Path
TEST_CAMERA_DATA_PATH=./test/data/camera/

# ========================================
# AI/ML Configuration (Testing)
# ========================================

# AI Model Path
AI_MODEL_PATH=./models/test/

# AI Training Data Path
AI_TRAINING_DATA_PATH=./data/training/test/

# AI Model Type (tensorflow, pytorch, onnx)
AI_MODEL_TYPE=tensorflow

# AI Confidence Threshold (low for testing)
AI_CONFIDENCE_THRESHOLD=0.3

# Use Mock AI Models (required for testing)
USE_MOCK_AI=true

# Test AI Model Path
TEST_AI_MODEL_PATH=./test/models/

# ========================================
# Tracking Configuration (Testing)
# ========================================

# Hand Tracking Enabled
HAND_TRACKING_ENABLED=true

# Eye Tracking Enabled
EYE_TRACKING_ENABLED=true

# Gesture Recognition Enabled
GESTURE_RECOGNITION_ENABLED=true

# Tracking Update Rate (low for testing)
TRACKING_UPDATE_RATE=15

# Use Mock Tracking Data (required for testing)
USE_MOCK_TRACKING=true

# Test Tracking Data Path
TEST_TRACKING_DATA_PATH=./test/data/tracking/

# ========================================
# Overlay Configuration (Testing)
# ========================================

# Overlay Default Position
OVERLAY_DEFAULT_X=50
OVERLAY_DEFAULT_Y=50

# Overlay Default Size
OVERLAY_DEFAULT_WIDTH=200
OVERLAY_DEFAULT_HEIGHT=150

# Overlay Transparency (high for testing)
OVERLAY_DEFAULT_OPACITY=1.0

# ========================================
# System Monitoring (Testing)
# ========================================

# System Monitor Update Interval (fast for testing)
SYSTEM_MONITOR_INTERVAL=100

# Temperature Warning Threshold (Â°C)
TEMPERATURE_WARNING_THRESHOLD=90

# Battery Warning Threshold (%)
BATTERY_WARNING_THRESHOLD=10

# CPU Usage Warning Threshold (%)
CPU_WARNING_THRESHOLD=98

# Use Mock System Data (required for testing)
USE_MOCK_SYSTEM_DATA=true

# Test System Data Path
TEST_SYSTEM_DATA_PATH=./test/data/system/

# ========================================
# Logging Configuration (Testing)
# ========================================

# Log Level (minimal for testing)
LOG_LEVEL=error

# Log File Path
LOG_FILE_PATH=./logs/app-test.log

# Log Max Size (MB)
LOG_MAX_SIZE=1

# Log Max Files
LOG_MAX_FILES=1

# Enable Console Logging (disabled in testing)
CONSOLE_LOGGING=false

# Enable File Logging (minimal for testing)
FILE_LOGGING=true

# Enable Test Logging
TEST_LOGGING=true

# ========================================
# Database Configuration (Testing)
# ========================================

# Database Type (use in-memory or test database)
DATABASE_TYPE=sqlite

# Database Path (for SQLite - test database)
DATABASE_PATH=./data/app-test.db

# Database Host (for PostgreSQL/MySQL)
DATABASE_HOST=localhost

# Database Port (for PostgreSQL/MySQL)
DATABASE_PORT=5433

# Database Name (for PostgreSQL/MySQL)
DATABASE_NAME=ar_control_center_test

# Database Username (for PostgreSQL/MySQL)
DATABASE_USERNAME=test_user

# Database Password (for PostgreSQL/MySQL)
DATABASE_PASSWORD=test_password

# Enable Database Logging (disabled in testing)
DATABASE_LOGGING=false

# Use In-Memory Database for Tests
USE_IN_MEMORY_DB=true

# ========================================
# API Configuration (Testing)
# ========================================

# API Base URL (test server)
API_BASE_URL=http://localhost:8001

# API Timeout (short for testing)
API_TIMEOUT=2000

# API Retry Attempts
API_RETRY_ATTEMPTS=1

# Enable API Mocking (required for testing)
API_MOCKING=true

# Test API Server Port
TEST_API_PORT=8001

# ========================================
# Security Configuration (Testing)
# ========================================

# JWT Secret Key (simple key for testing)
JWT_SECRET=test-jwt-secret-key

# Session Secret (simple key for testing)
SESSION_SECRET=test-session-secret-key

# CORS Origins (allow all in testing)
CORS_ORIGINS=*

# Disable HTTPS in Testing
DISABLE_HTTPS=true

# ========================================
# Build Configuration (Testing)
# ========================================

# Electron Builder Configuration
ELECTRON_BUILDER_APP_ID=com.ar.controlcenter.test
ELECTRON_BUILDER_PRODUCT_NAME=Augmented Perception Control Center (Test)

# Skip Code Signing in Testing
SKIP_CODE_SIGNING=true

# ========================================
# Feature Flags (Testing)
# ========================================

# Enable Experimental Features (enabled for testing)
ENABLE_EXPERIMENTAL_FEATURES=true

# Enable Beta Features (enabled for testing)
ENABLE_BETA_FEATURES=true

# Enable Debug Mode (disabled in testing)
ENABLE_DEBUG_MODE=false

# Enable Performance Monitoring (disabled in testing)
ENABLE_PERFORMANCE_MONITORING=false

# Enable Development Tools (disabled in testing)
ENABLE_DEV_TOOLS=false

# ========================================
# External Services (Testing)
# ========================================

# GitHub API Token (mock token for testing)
GITHUB_TOKEN=test-github-token

# Update Server URL (test server)
UPDATE_SERVER_URL=http://localhost:3002

# Analytics Endpoint (test server)
ANALYTICS_ENDPOINT=http://localhost:3003

# Disable External Services in Testing
DISABLE_EXTERNAL_SERVICES=true

# ========================================
# Localization (Testing)
# ========================================

# Default Language
DEFAULT_LANGUAGE=en

# Supported Languages (minimal for testing)
SUPPORTED_LANGUAGES=en

# Enable Language Debugging (disabled in testing)
LANGUAGE_DEBUG=false

# ========================================
# Performance Configuration (Testing)
# ========================================

# Memory Limit (MB) - low for testing
MEMORY_LIMIT=512

# CPU Threads
CPU_THREADS=1

# GPU Acceleration (disabled for testing)
GPU_ACCELERATION=false

# Enable Performance Profiling (disabled in testing)
PERFORMANCE_PROFILING=false

# ========================================
# Backup Configuration (Testing)
# ========================================

# Auto Backup Enabled (disabled in testing)
AUTO_BACKUP_ENABLED=false

# Backup Interval (hours)
BACKUP_INTERVAL=24

# Backup Retention (days)
BACKUP_RETENTION=1

# Backup Path
BACKUP_PATH=./backups/test/

# ========================================
# Testing-Specific Settings
# ========================================

# Test Framework Configuration
TEST_FRAMEWORK=jest

# Test Timeout (ms)
TEST_TIMEOUT=10000

# Test Retry Attempts
TEST_RETRY_ATTEMPTS=1

# Enable Test Coverage
TEST_COVERAGE=true

# Coverage Threshold (%)
COVERAGE_THRESHOLD=80

# Test Data Directory
TEST_DATA_DIR=./test/data/

# Test Reports Directory
TEST_REPORTS_DIR=./test/reports/

# Enable Screenshot Testing
SCREENSHOT_TESTING=true

# Screenshot Directory
SCREENSHOT_DIR=./test/screenshots/

# Enable Video Recording
VIDEO_RECORDING=false

# Video Directory
VIDEO_DIR=./test/videos/

# ========================================
# CI/CD Testing Settings
# ========================================

# CI Environment
CI_ENVIRONMENT=false

# Headless Mode
HEADLESS_MODE=true

# Parallel Testing
PARALLEL_TESTING=false

# Test Workers
TEST_WORKERS=1

# ========================================
# Mock Data Configuration
# ========================================

# Mock Data Directory
MOCK_DATA_DIR=./test/mocks/

# Enable Mock Services
ENABLE_MOCK_SERVICES=true

# Mock Service Ports
MOCK_CAMERA_PORT=9001
MOCK_AI_PORT=9002
MOCK_TRACKING_PORT=9003
MOCK_SYSTEM_PORT=9004

