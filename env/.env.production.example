# ========================================
# AR Glasses Control Center - Production Environment
# ========================================
# Copy this file to .env.production and modify the values as needed
# This configuration is optimized for production deployment

# ========================================
# Application Configuration
# ========================================

# Node Environment
NODE_ENV=production

# Application Port (if using web server)
PORT=3000

# Application Debug Mode
DEBUG=false

# ========================================
# Development Settings (Production)
# ========================================

# Enable Live Reload (disabled in production)
LIVE_RELOAD=false

# Enable DevTools (disabled in production)
OPEN_DEVTOOLS=false

# Enable Hot Reload (disabled in production)
HOT_RELOAD=false

# Enable Source Maps (disabled in production)
SOURCE_MAPS=false

# Enable Fast Refresh (disabled in production)
FAST_REFRESH=false

# ========================================
# Camera Configuration (Production)
# ========================================

# Camera Device IDs (comma-separated for multiple cameras)
CAMERA_DEVICE_IDS=0,1

# Camera Resolution (full resolution for production)
CAMERA_WIDTH=1920
CAMERA_HEIGHT=1080

# Camera Frame Rate (full frame rate for production)
CAMERA_FPS=30

# Camera Calibration File Path
CAMERA_CALIBRATION_PATH=./config/camera-calibration.json

# Use Mock Camera Data (disabled in production)
USE_MOCK_CAMERA=false

# ========================================
# AI/ML Configuration (Production)
# ========================================

# AI Model Path
AI_MODEL_PATH=./models/production/

# AI Training Data Path
AI_TRAINING_DATA_PATH=./data/training/production/

# AI Model Type (tensorflow, pytorch, onnx)
AI_MODEL_TYPE=tensorflow

# AI Confidence Threshold (higher for production)
AI_CONFIDENCE_THRESHOLD=0.8

# Use Mock AI Models (disabled in production)
USE_MOCK_AI=false

# ========================================
# Tracking Configuration (Production)
# ========================================

# Hand Tracking Enabled
HAND_TRACKING_ENABLED=true

# Eye Tracking Enabled
EYE_TRACKING_ENABLED=true

# Gesture Recognition Enabled
GESTURE_RECOGNITION_ENABLED=true

# Tracking Update Rate (full rate for production)
TRACKING_UPDATE_RATE=60

# Use Mock Tracking Data (disabled in production)
USE_MOCK_TRACKING=false

# ========================================
# Overlay Configuration (Production)
# ========================================

# Overlay Default Position
OVERLAY_DEFAULT_X=100
OVERLAY_DEFAULT_Y=100

# Overlay Default Size
OVERLAY_DEFAULT_WIDTH=400
OVERLAY_DEFAULT_HEIGHT=300

# Overlay Transparency (optimized for production)
OVERLAY_DEFAULT_OPACITY=0.8

# ========================================
# System Monitoring (Production)
# ========================================

# System Monitor Update Interval (optimized for production)
SYSTEM_MONITOR_INTERVAL=1000

# Temperature Warning Threshold (Â°C)
TEMPERATURE_WARNING_THRESHOLD=80

# Battery Warning Threshold (%)
BATTERY_WARNING_THRESHOLD=20

# CPU Usage Warning Threshold (%)
CPU_WARNING_THRESHOLD=90

# Use Mock System Data (disabled in production)
USE_MOCK_SYSTEM_DATA=false

# ========================================
# Logging Configuration (Production)
# ========================================

# Log Level (less verbose for production)
LOG_LEVEL=info

# Log File Path
LOG_FILE_PATH=./logs/app.log

# Log Max Size (MB)
LOG_MAX_SIZE=50

# Log Max Files
LOG_MAX_FILES=10

# Enable Console Logging (disabled in production)
CONSOLE_LOGGING=false

# Enable File Logging
FILE_LOGGING=true

# Enable Structured Logging
STRUCTURED_LOGGING=true

# ========================================
# Database Configuration (Production)
# ========================================

# Database Type (use production database)
DATABASE_TYPE=postgres

# Database Path (for SQLite)
DATABASE_PATH=./data/app.db

# Database Host (for PostgreSQL/MySQL)
DATABASE_HOST=production-db.example.com

# Database Port (for PostgreSQL/MySQL)
DATABASE_PORT=5432

# Database Name (for PostgreSQL/MySQL)
DATABASE_NAME=ar_control_center_prod

# Database Username (for PostgreSQL/MySQL)
DATABASE_USERNAME=prod_user

# Database Password (for PostgreSQL/MySQL)
DATABASE_PASSWORD=your-secure-production-password

# Enable Database Logging (disabled in production)
DATABASE_LOGGING=false

# Database Connection Pool Size
DATABASE_POOL_SIZE=10

# ========================================
# API Configuration (Production)
# ========================================

# API Base URL (production server)
API_BASE_URL=https://api.ar-control-center.com

# API Timeout (optimized for production)
API_TIMEOUT=5000

# API Retry Attempts
API_RETRY_ATTEMPTS=3

# Enable API Mocking (disabled in production)
API_MOCKING=false

# API Rate Limiting
API_RATE_LIMIT=1000

# ========================================
# Security Configuration (Production)
# ========================================

# JWT Secret Key (use strong, unique key)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-immediately

# Session Secret (use strong, unique key)
SESSION_SECRET=your-super-secure-session-secret-key-change-this-immediately

# CORS Origins (restrict to specific domains)
CORS_ORIGINS=https://ar-control-center.com,https://www.ar-control-center.com

# Enable HTTPS
ENABLE_HTTPS=true

# SSL Certificate Path
SSL_CERT_PATH=./certs/cert.pem

# SSL Key Path
SSL_KEY_PATH=./certs/key.pem

# ========================================
# Build Configuration (Production)
# ========================================

# Electron Builder Configuration
ELECTRON_BUILDER_APP_ID=com.ar.controlcenter
ELECTRON_BUILDER_PRODUCT_NAME=Augmented Perception Control Center

# Code Signing (required for production)
SKIP_CODE_SIGNING=false

# Code Signing Certificate Paths
WIN_CERT_PATH=./certs/windows-cert.p12
WIN_CERT_PASSWORD=your-windows-cert-password

MAC_CERT_PATH=./certs/mac-cert.p12
MAC_CERT_PASSWORD=your-mac-cert-password

# ========================================
# Feature Flags (Production)
# ========================================

# Enable Experimental Features (disabled in production)
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable Beta Features (disabled in production)
ENABLE_BETA_FEATURES=false

# Enable Debug Mode (disabled in production)
ENABLE_DEBUG_MODE=false

# Enable Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable Development Tools (disabled in production)
ENABLE_DEV_TOOLS=false

# ========================================
# External Services (Production)
# ========================================

# GitHub API Token (for releases)
GITHUB_TOKEN=your-production-github-token

# Update Server URL (production server)
UPDATE_SERVER_URL=https://updates.ar-control-center.com

# Analytics Endpoint (production)
ANALYTICS_ENDPOINT=https://analytics.ar-control-center.com

# Disable External Services (enabled in production)
DISABLE_EXTERNAL_SERVICES=false

# ========================================
# Localization (Production)
# ========================================

# Default Language
DEFAULT_LANGUAGE=en

# Supported Languages (comma-separated)
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh

# Enable Language Debugging (disabled in production)
LANGUAGE_DEBUG=false

# ========================================
# Performance Configuration (Production)
# ========================================

# Memory Limit (MB) - optimized for production
MEMORY_LIMIT=2048

# CPU Threads
CPU_THREADS=4

# GPU Acceleration (enabled for production)
GPU_ACCELERATION=true

# Enable Performance Profiling (disabled in production)
PERFORMANCE_PROFILING=false

# Enable Caching
ENABLE_CACHING=true

# Cache TTL (seconds)
CACHE_TTL=3600

# ========================================
# Backup Configuration (Production)
# ========================================

# Auto Backup Enabled
AUTO_BACKUP_ENABLED=true

# Backup Interval (hours)
BACKUP_INTERVAL=24

# Backup Retention (days)
BACKUP_RETENTION=30

# Backup Path
BACKUP_PATH=./backups/production/

# Backup Encryption
BACKUP_ENCRYPTION=true

# ========================================
# Monitoring & Alerting (Production)
# ========================================

# Enable Application Monitoring
APP_MONITORING=true

# Monitoring Service URL
MONITORING_URL=https://monitoring.ar-control-center.com

# Alert Email Addresses
ALERT_EMAILS=admin@ar-control-center.com,ops@ar-control-center.com

# Health Check Endpoint
HEALTH_CHECK_ENDPOINT=/health

# ========================================
# CDN Configuration (Production)
# ========================================

# CDN Base URL
CDN_BASE_URL=https://cdn.ar-control-center.com

# Static Assets CDN
STATIC_CDN_URL=https://static.ar-control-center.com

# ========================================
# Notes
# ========================================
