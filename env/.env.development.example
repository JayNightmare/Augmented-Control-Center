# ========================================
# AR Glasses Control Center - Development Environment
# ========================================
# Copy this file to .env.development and modify the values as needed
# This configuration is optimized for development work

# ========================================
# Application Configuration
# ========================================

# Node Environment
NODE_ENV=development

# Application Port (if using web server)
PORT=3000

# Application Debug Mode
DEBUG=true

# ========================================
# Development Settings
# ========================================

# Enable Live Reload (development only)
LIVE_RELOAD=true

# Enable DevTools (development only)
OPEN_DEVTOOLS=true

# Enable Hot Reload
HOT_RELOAD=true

# Enable Source Maps
SOURCE_MAPS=true

# Enable Fast Refresh
FAST_REFRESH=true

# ========================================
# Camera Configuration (Development)
# ========================================

# Camera Device IDs (comma-separated for multiple cameras)
# Use test cameras or mock data in development
CAMERA_DEVICE_IDS=0,1

# Camera Resolution (lower for faster development)
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720

# Camera Frame Rate (lower for development)
CAMERA_FPS=15

# Camera Calibration File Path
CAMERA_CALIBRATION_PATH=./config/camera-calibration-dev.json

# Use Mock Camera Data
USE_MOCK_CAMERA=true

# ========================================
# AI/ML Configuration (Development)
# ========================================

# AI Model Path
AI_MODEL_PATH=./models/dev/

# AI Training Data Path
AI_TRAINING_DATA_PATH=./data/training/dev/

# AI Model Type (tensorflow, pytorch, onnx)
AI_MODEL_TYPE=tensorflow

# AI Confidence Threshold (lower for development)
AI_CONFIDENCE_THRESHOLD=0.5

# Use Mock AI Models
USE_MOCK_AI=true

# ========================================
# Tracking Configuration (Development)
# ========================================

# Hand Tracking Enabled
HAND_TRACKING_ENABLED=true

# Eye Tracking Enabled
EYE_TRACKING_ENABLED=true

# Gesture Recognition Enabled
GESTURE_RECOGNITION_ENABLED=true

# Tracking Update Rate (lower for development)
TRACKING_UPDATE_RATE=30

# Use Mock Tracking Data
USE_MOCK_TRACKING=true

# ========================================
# Overlay Configuration (Development)
# ========================================

# Overlay Default Position
OVERLAY_DEFAULT_X=100
OVERLAY_DEFAULT_Y=100

# Overlay Default Size
OVERLAY_DEFAULT_WIDTH=400
OVERLAY_DEFAULT_HEIGHT=300

# Overlay Transparency (more visible in development)
OVERLAY_DEFAULT_OPACITY=0.9

# ========================================
# System Monitoring (Development)
# ========================================

# System Monitor Update Interval (faster for development)
SYSTEM_MONITOR_INTERVAL=500

# Temperature Warning Threshold (Â°C)
TEMPERATURE_WARNING_THRESHOLD=85

# Battery Warning Threshold (%)
BATTERY_WARNING_THRESHOLD=15

# CPU Usage Warning Threshold (%)
CPU_WARNING_THRESHOLD=95

# Use Mock System Data
USE_MOCK_SYSTEM_DATA=true

# ========================================
# Logging Configuration (Development)
# ========================================

# Log Level (more verbose for development)
LOG_LEVEL=debug

# Log File Path
LOG_FILE_PATH=./logs/app-dev.log

# Log Max Size (MB)
LOG_MAX_SIZE=5

# Log Max Files
LOG_MAX_FILES=3

# Enable Console Logging
CONSOLE_LOGGING=true

# Enable File Logging
FILE_LOGGING=true

# ========================================
# Database Configuration (Development)
# ========================================

# Database Type (use SQLite for development)
DATABASE_TYPE=sqlite

# Database Path (for SQLite)
DATABASE_PATH=./data/app-dev.db

# Database Host (for PostgreSQL/MySQL)
DATABASE_HOST=localhost

# Database Port (for PostgreSQL/MySQL)
DATABASE_PORT=5432

# Database Name (for PostgreSQL/MySQL)
DATABASE_NAME=ar_control_center_dev

# Database Username (for PostgreSQL/MySQL)
DATABASE_USERNAME=dev_user

# Database Password (for PostgreSQL/MySQL)
DATABASE_PASSWORD=dev_password

# Enable Database Logging
DATABASE_LOGGING=true

# ========================================
# API Configuration (Development)
# ========================================

# API Base URL (local development server)
API_BASE_URL=http://localhost:8000

# API Timeout (longer for development)
API_TIMEOUT=10000

# API Retry Attempts
API_RETRY_ATTEMPTS=3

# Enable API Mocking
API_MOCKING=true

# ========================================
# Security Configuration (Development)
# ========================================

# JWT Secret Key (use simple key for development)
JWT_SECRET=dev-jwt-secret-key-change-in-production

# Session Secret (use simple key for development)
SESSION_SECRET=dev-session-secret-key-change-in-production

# CORS Origins (allow all in development)
CORS_ORIGINS=*

# Disable HTTPS in Development
DISABLE_HTTPS=true

# ========================================
# Build Configuration (Development)
# ========================================

# Electron Builder Configuration
ELECTRON_BUILDER_APP_ID=com.ar.controlcenter.dev
ELECTRON_BUILDER_PRODUCT_NAME=Augmented Perception Control Center (Dev)

# Skip Code Signing in Development
SKIP_CODE_SIGNING=true

# ========================================
# Feature Flags (Development)
# ========================================

# Enable Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=true

# Enable Beta Features
ENABLE_BETA_FEATURES=true

# Enable Debug Mode
ENABLE_DEBUG_MODE=true

# Enable Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable Development Tools
ENABLE_DEV_TOOLS=true

# ========================================
# External Services (Development)
# ========================================

# GitHub API Token (for releases)
GITHUB_TOKEN=your-github-token-here

# Update Server URL (development server)
UPDATE_SERVER_URL=http://localhost:3001

# Analytics Endpoint (development)
ANALYTICS_ENDPOINT=http://localhost:3002

# Disable External Services in Development
DISABLE_EXTERNAL_SERVICES=false

# ========================================
# Localization (Development)
# ========================================

# Default Language
DEFAULT_LANGUAGE=en

# Supported Languages (comma-separated)
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh

# Enable Language Debugging
LANGUAGE_DEBUG=true

# ========================================
# Performance Configuration (Development)
# ========================================

# Memory Limit (MB) - higher for development
MEMORY_LIMIT=4096

# CPU Threads
CPU_THREADS=2

# GPU Acceleration (disable if causing issues)
GPU_ACCELERATION=false

# Enable Performance Profiling
PERFORMANCE_PROFILING=true

# ========================================
# Backup Configuration (Development)
# ========================================

# Auto Backup Enabled
AUTO_BACKUP_ENABLED=false

# Backup Interval (hours)
BACKUP_INTERVAL=24

# Backup Retention (days)
BACKUP_RETENTION=7

# Backup Path
BACKUP_PATH=./backups/dev/

# ========================================
# Development-Specific Settings
# ========================================

# Enable Error Overlay
ERROR_OVERLAY=true

# Enable React DevTools
REACT_DEVTOOLS=true

# Enable Redux DevTools
REDUX_DEVTOOLS=true

# Enable Network Throttling
NETWORK_THROTTLING=false

# Enable Cache Busting
CACHE_BUSTING=true

# Enable Hot Module Replacement
HMR=true

# ========================================
# Notes
# ========================================
# 
# Development Environment Configuration:
# - Debug mode enabled
# - Verbose logging
# - Mock data enabled
# - Lower performance thresholds
# - Development-specific paths
# - Experimental features enabled
# - Security relaxed for development
# - External services can be disabled
#
# 1. Copy this file to .env.development
# 2. Modify values as needed for your development setup
# 3. Never commit .env files to version control
# 4. Use this configuration only for development
# 5. Switch to production config for deployment
#
# For more information, see the documentation at:
# https://github.com/JayNightmare/Augmented-Control-Center 