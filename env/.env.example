# ========================================
# AR Glasses Control Center - Environment Variables
# ========================================
# Copy this file to .env and modify the values as needed
# For environment-specific settings, see:
# - env.development.example
# - env.production.example  
# - env.test.example

# ========================================
# Application Configuration
# ========================================

# Node Environment
# Options: development, production, test
NODE_ENV=development

# Application Port (if using web server)
PORT=3000

# Application Debug Mode
DEBUG=false

# ========================================
# Camera Configuration
# ========================================

# Camera Device IDs (comma-separated for multiple cameras)
CAMERA_DEVICE_IDS=0,1

# Camera Resolution
CAMERA_WIDTH=1920
CAMERA_HEIGHT=1080

# Camera Frame Rate
CAMERA_FPS=30

# Camera Calibration File Path
CAMERA_CALIBRATION_PATH=./config/camera-calibration.json

# ========================================
# AI/ML Configuration
# ========================================

# AI Model Path
AI_MODEL_PATH=./models/

# AI Training Data Path
AI_TRAINING_DATA_PATH=./data/training/

# AI Model Type (tensorflow, pytorch, onnx)
AI_MODEL_TYPE=tensorflow

# AI Confidence Threshold (0.0 - 1.0)
AI_CONFIDENCE_THRESHOLD=0.8

# ========================================
# Tracking Configuration
# ========================================

# Hand Tracking Enabled
HAND_TRACKING_ENABLED=true

# Eye Tracking Enabled
EYE_TRACKING_ENABLED=true

# Gesture Recognition Enabled
GESTURE_RECOGNITION_ENABLED=true

# Tracking Update Rate (Hz)
TRACKING_UPDATE_RATE=60

# ========================================
# Overlay Configuration
# ========================================

# Overlay Default Position
OVERLAY_DEFAULT_X=100
OVERLAY_DEFAULT_Y=100

# Overlay Default Size
OVERLAY_DEFAULT_WIDTH=400
OVERLAY_DEFAULT_HEIGHT=300

# Overlay Transparency (0.0 - 1.0)
OVERLAY_DEFAULT_OPACITY=0.8

# ========================================
# System Monitoring
# ========================================

# System Monitor Update Interval (ms)
SYSTEM_MONITOR_INTERVAL=1000

# Temperature Warning Threshold (Â°C)
TEMPERATURE_WARNING_THRESHOLD=80

# Battery Warning Threshold (%)
BATTERY_WARNING_THRESHOLD=20

# CPU Usage Warning Threshold (%)
CPU_WARNING_THRESHOLD=90

# ========================================
# Logging Configuration
# ========================================

# Log Level
# Options: error, warn, info, debug, trace
LOG_LEVEL=info

# Log File Path
LOG_FILE_PATH=./logs/app.log

# Log Max Size (MB)
LOG_MAX_SIZE=10

# Log Max Files
LOG_MAX_FILES=5

# ========================================
# Database Configuration
# ========================================

# Database Type (sqlite, postgres, mysql)
DATABASE_TYPE=sqlite

# Database Path (for SQLite)
DATABASE_PATH=./data/app.db

# Database Host (for PostgreSQL/MySQL)
DATABASE_HOST=localhost

# Database Port (for PostgreSQL/MySQL)
DATABASE_PORT=5432

# Database Name (for PostgreSQL/MySQL)
DATABASE_NAME=ar_control_center

# Database Username (for PostgreSQL/MySQL)
DATABASE_USERNAME=user

# Database Password (for PostgreSQL/MySQL)
DATABASE_PASSWORD=password

# ========================================
# API Configuration
# ========================================

# API Base URL
API_BASE_URL=http://localhost:8000

# API Timeout (ms)
API_TIMEOUT=5000

# API Retry Attempts
API_RETRY_ATTEMPTS=3

# ========================================
# Security Configuration
# ========================================

# JWT Secret Key
JWT_SECRET=your-super-secret-jwt-key-here

# Session Secret
SESSION_SECRET=your-super-secret-session-key-here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ========================================
# Build Configuration
# ========================================

# Electron Builder Configuration
ELECTRON_BUILDER_APP_ID=com.ar.controlcenter
ELECTRON_BUILDER_PRODUCT_NAME=Augmented Perception Control Center

# ========================================
# Feature Flags
# ========================================

# Enable Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable Beta Features
ENABLE_BETA_FEATURES=false

# Enable Debug Mode
ENABLE_DEBUG_MODE=false

# Enable Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# ========================================
# External Services
# ========================================

# GitHub API Token (for releases)
GITHUB_TOKEN=your-github-token-here

# Update Server URL
UPDATE_SERVER_URL=https://updates.ar-control-center.com

# Analytics Endpoint (optional)
ANALYTICS_ENDPOINT=https://analytics.ar-control-center.com

# ========================================
# Localization
# ========================================

# Default Language
DEFAULT_LANGUAGE=en

# Supported Languages (comma-separated)
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh

# ========================================
# Performance Configuration
# ========================================

# Memory Limit (MB)
MEMORY_LIMIT=2048

# CPU Threads
CPU_THREADS=4

# GPU Acceleration
GPU_ACCELERATION=true

# ========================================
# Backup Configuration
# ========================================

# Auto Backup Enabled
AUTO_BACKUP_ENABLED=true

# Backup Interval (hours)
BACKUP_INTERVAL=24

# Backup Retention (days)
BACKUP_RETENTION=30

# Backup Path
BACKUP_PATH=./backups/

# ========================================
# Notes
# ========================================
# 
# 1. Copy this file to .env and modify values as needed
# 2. Never commit .env files to version control
# 3. Use strong, unique secrets in production
# 4. Test all configurations in development before production
# 5. Keep sensitive data secure and encrypted
#
# For more information, see the documentation at:
# https://github.com/JayNightmare/Augmented-Control-Center 